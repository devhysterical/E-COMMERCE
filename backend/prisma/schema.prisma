generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  COD
  MOMO
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String?
  phone         String?
  address       String?
  dateOfBirth   DateTime?
  avatarUrl     String?
  authProvider  String    @default("email") // "email" or "google"
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  reviews       Review[]
  orders        Order[]
  cart          Cart?
  wishlist      WishlistItem[]
  addresses     Address[]

  @@map("users")
}

model Category {
  id            String    @id @default(uuid())
  name          String    @unique
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  products      Product[]

  @@map("categories")
}

model Product {
  id            String    @id @default(uuid())
  name          String
  description   String?
  price         Int       // Định dạng tiền tệ: Số nguyên (Integer)
  stock         Int       @default(0)
  imageUrl      String?   // Ảnh chính (backward compatible)
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  images        ProductImage[]
  reviews       Review[]
  orderItems    OrderItem[]
  cartItems     CartItem[]
  wishlistItems WishlistItem[]

  @@map("products")
}

model ProductImage {
  id            String    @id @default(uuid())
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  imageUrl      String
  isPrimary     Boolean   @default(false)
  sortOrder     Int       @default(0)
  createdAt     DateTime  @default(now())

  @@map("product_images")
}


model Order {
  id              String        @id @default(uuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  totalAmount     Int           // Định dạng tiền tệ: Số nguyên (Integer)
  discountAmount  Int           @default(0) // Số tiền giảm giá từ coupon
  shippingFee     Int           @default(0) // Phí vận chuyển
  status          OrderStatus   @default(PENDING)
  paymentMethod   PaymentMethod @default(COD)
  paymentStatus   PaymentStatus @default(PENDING)
  momoTransId     String?       // MoMo transaction ID
  couponId        String?       // Mã giảm giá đã áp dụng
  coupon          Coupon?       @relation(fields: [couponId], references: [id])
  address         String
  phone           String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?     // Soft Delete

  orderItems      OrderItem[]

  @@map("orders")
}

// ===== COUPON SYSTEM =====

enum DiscountType {
  PERCENTAGE  // Giảm theo phần trăm
  FIXED       // Giảm số tiền cố định
}

model Coupon {
  id              String        @id @default(uuid())
  code            String        @unique
  description     String?
  discountType    DiscountType
  discountValue   Int           // Giá trị giảm (% hoặc VND)
  minOrderAmount  Int           @default(0) // Đơn hàng tối thiểu
  maxDiscount     Int?          // Giảm tối đa (cho PERCENTAGE)
  maxUses         Int?          // Số lần sử dụng tối đa
  usedCount       Int           @default(0)
  startDate       DateTime      @default(now())
  expiresAt       DateTime?     // Ngày hết hạn
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  orders          Order[]
  usages          CouponUsage[]

  @@map("coupons")
}

model CouponUsage {
  id            String    @id @default(uuid())
  couponId      String
  coupon        Coupon    @relation(fields: [couponId], references: [id])
  userId        String
  orderId       String?
  usedAt        DateTime  @default(now())

  @@unique([couponId, userId]) // Mỗi user chỉ dùng mỗi coupon 1 lần
  @@map("coupon_usages")
}


model OrderItem {
  id            String    @id @default(uuid())
  orderId       String
  order         Order     @relation(fields: [orderId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  quantity      Int
  price         Int       // Giá tại thời điểm mua (Integer)

  @@map("order_items")
}

model Cart {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  cartItems     CartItem[]

  @@map("carts")
}

model CartItem {
  id            String    @id @default(uuid())
  cartId        String
  cart          Cart      @relation(fields: [cartId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  quantity      Int

  @@map("cart_items")
}

model Review {
  id            String    @id @default(uuid())
  rating        Int
  comment       String?
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("reviews")
}

model Banner {
  id            String    @id @default(uuid())
  title         String
  description   String?
  imageUrl      String
  linkUrl       String?   // Link khi click vào banner
  isActive      Boolean   @default(true)
  sortOrder     Int       @default(0) // Thứ tự hiển thị
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("banners")
}

model WishlistItem {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())

  @@unique([userId, productId]) // User chỉ có thể thêm 1 product 1 lần
  @@map("wishlist_items")
}

model Address {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label       String   // "Home", "Office", "Other"
  fullName    String
  phone       String
  province    String
  district    String
  ward        String?
  street      String   // Full address line
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("addresses")
}

// ===== SHIPPING ZONES =====

model ShippingZone {
  id            String   @id @default(uuid())
  name          String   @unique  // "Nội thành HCM", "Miền Bắc"
  fee           Int      // Phí ship (VND)
  minOrderFree  Int?     // Miễn phí nếu đơn >= số này
  estimatedDays String?  // "1-2 ngày"
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  provinces     ShippingProvince[]

  @@map("shipping_zones")
}

model ShippingProvince {
  id        String       @id @default(uuid())
  zoneId    String
  zone      ShippingZone @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  province  String       @unique  // "Hồ Chí Minh"

  @@map("shipping_provinces")
}
