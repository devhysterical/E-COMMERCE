generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  COD
  MOMO
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String?
  phone         String?
  address       String?
  dateOfBirth   DateTime?
  avatarUrl     String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  reviews       Review[]
  orders        Order[]
  cart          Cart?

  @@map("users")
}

model Category {
  id            String    @id @default(uuid())
  name          String    @unique
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  products      Product[]

  @@map("categories")
}

model Product {
  id            String    @id @default(uuid())
  name          String
  description   String?
  price         Int       // Định dạng tiền tệ: Số nguyên (Integer)
  stock         Int       @default(0)
  imageUrl      String?
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft Delete

  reviews       Review[]
  orderItems    OrderItem[]
  cartItems     CartItem[]

  @@map("products")
}

model Order {
  id              String        @id @default(uuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  totalAmount     Int           // Định dạng tiền tệ: Số nguyên (Integer)
  status          OrderStatus   @default(PENDING)
  paymentMethod   PaymentMethod @default(COD)
  paymentStatus   PaymentStatus @default(PENDING)
  momoTransId     String?       // MoMo transaction ID
  address         String
  phone           String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?     // Soft Delete

  orderItems      OrderItem[]

  @@map("orders")
}

model OrderItem {
  id            String    @id @default(uuid())
  orderId       String
  order         Order     @relation(fields: [orderId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  quantity      Int
  price         Int       // Giá tại thời điểm mua (Integer)

  @@map("order_items")
}

model Cart {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  cartItems     CartItem[]

  @@map("carts")
}

model CartItem {
  id            String    @id @default(uuid())
  cartId        String
  cart          Cart      @relation(fields: [cartId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  quantity      Int

  @@map("cart_items")
}

model Review {
  id            String    @id @default(uuid())
  rating        Int
  comment       String?
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("reviews")
}
